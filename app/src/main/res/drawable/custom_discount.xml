<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <!-- Gradient màu nền -->
    <gradient
        android:angle="45"
        android:startColor="#FF5733"
        android:endColor="#FFC300"
        android:type="linear"/>

    <!-- Bo góc nhẹ hơn -->
    <corners android:topLeftRadius="15dp" android:topRightRadius="5dp"
        android:bottomLeftRadius="5dp" android:bottomRightRadius="15dp"/>

    <!-- Đường viền -->
    <stroke android:width="1.5dp" android:color="#FFD700"/> <!-- Màu vàng gold -->

    <!-- Padding giúp nội dung không bị dính sát mép -->
    <padding android:left="6dp" android:right="6dp" android:top="3dp" android:bottom="3dp"/>
</shape>
